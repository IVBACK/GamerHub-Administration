<Page x:Class="GamerHub_Administration.Pages.FriendsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GamerHub_Administration.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FriendsPage">

    <Grid>
        <DataGrid HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        <DataGrid Name="FriendsDataGrid" MaxWidth="800" CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,0,0,46" SelectedItem="{Binding Path=SelectedFriend, Mode=TwoWay}" IsReadOnly="True"/>
        <Label Content="" Name="FriendOfLabel" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="229"/>
        
    </Grid>
</Page>
